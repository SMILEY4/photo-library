{
  "name": "photo-library-electron",
  "version": "0.1.0",
  "main": "src/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "concurrently": "^5.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.3.1",
    "node-fetch": "^2.6.1",
    "photo-library-common-ui": "file:../photo-library-common-ui",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "tree-kill": "^1.2.2",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "ebuild": "npm run build && node_modules/.bin/build",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "react-app-rewired build && electron-builder build"
  },
  "build": {
    "appId": "de.ruegnerlukas.photolibrary",
    "extends": null,
    "publish": null,
    "files": [
      "./build/**/*",
      "build/**/*",
      "./src/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      "photo-library-core-win.exe",
      "photo-library-core-macos"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "customize-cra": "^1.0.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "react-app-rewired": "^2.1.7"
  }
}
